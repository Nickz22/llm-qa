{
  "name": "llm-qa",
  "version": "1.0.0",
  "description": "End-to-end testing utilities for LLM QA",
  "scripts": {
    "puppeteer:start": "node puppeteer/server.js",
    "puppeteer:dev": "nodemon puppeteer/server.js",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:mcp": "jest tests/mcp --detectOpenHandles",
    "e2e:test": "node run-e2e.js"
  },
  "dependencies": {
    "@playwright/test": "^1.49.1",
    "axios": "^1.7.9",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-fetch": "^2.7.0",
    "openai": "^4.78.1",
    "prettier": "^3.4.2",
    "puppeteer": "^21.11.0",
    "yargs": "^17.7.2",
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  },
  "jest": {
    "testTimeout": 30000,
    "testEnvironment": "node"
  }
}
